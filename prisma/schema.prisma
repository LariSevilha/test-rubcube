generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         String   @default("USER")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  logs ApiLog[]
}

model ApiLog {
  id         String   @id @default(uuid())
  userId     String?
  method     String
  path       String
  statusCode Int
  ip         String?
  userAgent  String?
  durationMs Int?
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}
